{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": [
          "styled",
          "div",
          "a",
          "p",
          "h1",
          "h2",
          "h3",
          "h4",
          "h5",
          "img",
          "css",
          "scss",
          "sass",
          "sty"
        ]
      }
    ],
    "baseUrl": "types",
    "typeRoots": [
      "types",
      "node_modules/*",
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}